# APPLICATION CONFIGURATION

NODE_ENV=development
PORT=3000
API_PREFIX=api

# DATABASE CONFIGURATION

DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=interview_prep_user
DB_PASSWORD=your_secure_database_password_here
DB_NAME=interview_prep_dev
DB_SYNC=true
DB_LOGGING=true
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10

# REDIS CONFIGURATION

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600


# JWT AUTHENTICATION

# Generate strong secrets: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_at_least_32_characters_long_please_change_this
JWT_EXPIRATION=7d
JWT_REFRESH_SECRET=your_refresh_secret_at_least_32_characters_long_please_change_this
JWT_REFRESH_EXPIRATION=30d

# SECURITY

BCRYPT_ROUNDS=10
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=10
CORS_ORIGIN=http://localhost:3001

# LOGGING

LOG_LEVEL=debug
LOG_FORMAT=pretty

# LLM CONFIGURATION

LLM_PROVIDER=gemini
GEMINI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=
LLM_MODEL=gemini-2.5-flash
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.7

# MONITORING

SENTRY_DSN=

# FEATURE FLAGS

ENABLE_SWAGGER=true
ENABLE_METRICS=false